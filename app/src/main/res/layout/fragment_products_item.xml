<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/item_product_picture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:padding="8dp"
        android:src="@drawable/no_picture" />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/item_product_picture"
        android:layout_toRightOf="@id/item_product_picture"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/item_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_product_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="brand" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - " />

            <TextView
                android:id="@+id/item_product_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="quantity" />

        </LinearLayout>


        <TextView
            android:id="@+id/item_product_quality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_indicator_orange"
            android:drawablePadding="-4dp"
            android:drawableRight="@drawable/ic_indicator_orange"
            android:gravity="center"
            android:text="medium"
            android:textColor="@color/colorBlack"
            android:textSize="13sp"
            android:textStyle="bold" />


    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_centerInParent="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_arrow_right"
        android:layout_alignParentRight="true" />

</RelativeLayout>
