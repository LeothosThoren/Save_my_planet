<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.controlers.fragments.YouTubeDialog">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true">

        <ImageButton
            android:id="@+id/close_youtube_view"
            android:layout_width="@dimen/cross_size"
            android:layout_height="@dimen/cross_size"
            android:background="@color/colorBlack"
            android:contentDescription="@string/close_window"
            android:padding="5dp"
            android:src="@drawable/ic_exit" />
    </android.support.v7.widget.CardView>


    <FrameLayout
        android:id="@+id/youtube_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:visibility="visible" />

</RelativeLayout>